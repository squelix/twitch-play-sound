{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "target": "es5",
    "module": "commonjs",
    "lib": [ "esnext", "dom", "dom.iterable" ],
    "jsx": "preserve",
    "noEmit": true,
    "downlevelIteration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
