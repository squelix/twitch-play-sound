{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "paths": { "*": ["types/*"] },
    "target": "es2015",
    "module": "commonJS",
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "lib": [
      "es2016",
      "es2015",
      "dom"
    ],
    "baseUrl": "./src/",
    "outDir": "./dist/"
  },
  "include": [
    "src/**/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
